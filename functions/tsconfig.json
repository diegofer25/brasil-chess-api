{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~api/*": ["src/api/*"],
    }
  },
  "include": [
    "**.d.ts",
    "src/**/**.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "types": [
    "@types/node"
  ]
}
